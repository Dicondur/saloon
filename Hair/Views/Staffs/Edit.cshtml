@model Hair.Models.Staff

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Staff</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StaffId" />
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label"></label>
                <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateHired" class="control-label"></label>
                <input asp-for="DateHired" class="form-control" />
                <span asp-validation-for="DateHired" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateTerminated" class="control-label"></label>
                <input asp-for="DateTerminated" class="form-control" />
                <span asp-validation-for="DateTerminated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReasonForTermination" class="control-label"></label>
                <input asp-for="ReasonForTermination" class="form-control" />
                <span asp-validation-for="ReasonForTermination" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsStylist" /> @Html.DisplayNameFor(model => model.IsStylist)
