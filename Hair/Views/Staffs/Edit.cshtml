            <div class="form-group">
                <label asp-for="HourlyChargeoutRate" class="control-label"></label>
                <input asp-for="HourlyChargeoutRate" class="form-control" />
                <span asp-validation-for="HourlyChargeoutRate" class="text-danger"></span>
